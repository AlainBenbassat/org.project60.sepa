<?xml version="1.0" encoding="iso-8859-1" ?>  

<table>  
  <base>CRM/Sepa</base>  
  <class>SEPAMandate</class>  
  <name>civicrm_sdd_mandate</name>  
  <add>4.3</add> 
  <log>true</log> 
  <field>  
    <name>id</name>  
    <type>int unsigned</type>  
    <required>true</required>  
    <comment>ID</comment>  
    <add>4.3</add>
    <export>true</export>
  </field>  
  <primaryKey>  
    <name>id</name>  
    <autoincrement>true</autoincrement>  
  </primaryKey>  
  <field>
    <name>reference</name>
    <export>true</export>
    <type>varchar</type>
    <length>35</length>
    <required>true</required>
    <unique>true</unique>
    <comment>The unique mandate reference</comment>
    <add>4.3</add>
  </field>
  <index>
    <name>reference</name>
    <fieldName>reference</fieldName>
    <unique>unique</unique>
    <add>4.3</add>
  </index>


  <field>
    <name>source</name>
    <type>varchar</type>
    <length>64</length>
    <comment>Needed or coming from ContributionRecur? phoning/online/face 2 face....</comment>
    <add>4.3</add>
  </field>

  <field> 
    <name>contribution_recur_id</name> 
    <title>Recuring Contribution ID</title>
    <type>int unsigned</type> 
    <unique>true</unique>
    <comment>FK to Contact Recuring Contribution associated with the mandate</comment>
    <add>4.3</add> 
  </field> 
  <foreignKey> 
    <name>contribution_recur_id</name> 
    <table>civicrm_contribution_recur</table> 
    <key>id</key> 
    <add>4.3</add> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>


  <field> 
    <name>creditor_id</name> 
    <title>Creditor ID</title>
    <type>int unsigned</type> 
    <comment>FK to ssd_creditor</comment>
    <add>4.3</add> 
  </field> 
  <foreignKey> 
    <name>creditor_sdd_id</name> 
    <table>civicrm_sdd_creditor</table> 
    <key>id</key> 
    <add>4.3</add> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field> 
    <name>contact_id</name> 
    <title>Contact ID</title>
    <type>int unsigned</type> 
    <comment>FK to Contact ID that owns that account</comment>
    <add>4.3</add> 
  </field> 
  <foreignKey> 
    <name>contact_id</name> 
    <table>civicrm_contact</table> 
    <key>id</key> 
    <add>4.3</add> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>iban</name>
    <type>varchar</type>
    <length>42</length>
    <required>false</required>
    <comment>Iban of the debtor</comment>
    <add>4.3</add>
  </field>
  <index>
    <name>iban</name>
    <fieldName>iban</fieldName>
    <add>4.3</add>
  </index>

  <field>
    <name>bic</name>
    <type>varchar</type>
    <length>11</length>
    <comment>BIC of the debtor</comment>
    <add>4.3</add>
  </field>

  <field>  
    <name>type</name>  
    <type>varchar</type>  
    <length>1</length>
    <required>true</required>  
    <default>R</default> 
    <add>4.3</add> 
    <comment>R for recurrent (default) O for one-shot</comment>
  </field> 

  <field>  
    <name>enabled_id</name>  
    <type>boolean</type>  
    <required>true</required>  
    <default>1</default> 
    <add>4.3</add>
    <comment>If the mandate has been validated</comment>
  </field>
  <field>
    <name>creation_date</name>
    <title>creation date</title>
    <type>datetime</type>
    <export>true</export>
    <add>4.3</add>
  </field>

  <field>
    <name>validation_date</name>
    <title>validation date</title>
    <type>datetime</type>
    <add>4.3</add>
  </field>
</table>
